input {
  
  padding:10px 20px;
  
  width: 50%;

  border: 2px solid #eee;

  border-left: 4px solid;

  border-left-color:salmon; 

  border-radius: 0px;

  transition: border-color .8s ease-out;
}

input:focus{

  outline:none;

  border: 2px solid #eee;

  border-left: 4px solid #888;

}

.button {

  display: inline-block;

  border-radius: 0px;

  background-color: #EF6F53;

  border: none;

  color: #FFFFFF;

  text-align: center;

  font-size:16px;

  padding: 5.6px 20px;

  width: 90px;

  transition: all 0.5s;

  cursor: pointer;

  margin: 0px;
}

.button span {

  cursor: pointer;

  display: inline-block;

  position: relative;

  transition: 0.5s;
}

.button span:after {

  content: '\00bb';

  position: absolute;

  opacity: 0;

  top: 0;

  right: -20px;

  transition: 0.5s;
}

.button:hover span {

  padding-right: 25px;
}

.button:hover span:after {

  opacity: 1;

  right: 0;
}